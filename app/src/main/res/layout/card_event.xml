<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/card_event">

        <!-- カードに載せる情報 -->

        <RelativeLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:id="@+id/card_relative"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高専カンファレンス100 in 東京"
                android:id="@+id/text_title_event"
                android:textSize="18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="電気通信大学"
                android:textSize="12sp"
                android:id="@+id/text_place_event"
                android:layout_below="@+id/text_title_event"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015/12/19 - 2015/12/20"
                android:textSize="12sp"
                android:id="@+id/text_between"
                android:layout_below="@+id/text_place_event"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>